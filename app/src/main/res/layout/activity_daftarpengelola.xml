<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DaftarActivity">

    <ImageView
        android:layout_width="331dp"
        android:layout_height="408dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="400dp"
        android:rotationX="180"
        android:rotationY="180"
        android:src="@drawable/dekorasipojok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-55dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        tools:ignore="MissingConstraints"
        android:layout_width="330dp"
        android:layout_height="408dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="388dp"
        android:src="@drawable/dekorasipojok"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-55dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_wisata"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="52dp"
                android:src="@drawable/gambartravel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="30dp"
                android:text="@string/text_daftar"
                android:textColor="@color/blue_3"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_wisata"
                app:layout_constraintVertical_bias="0.054"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_lengkap"
                android:textColor="@color/blue_3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.101"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText

                android:id="@+id/inputnamalengkap"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="352dp"
                android:background="@drawable/cornerstyle"
                android:hint="    Input Nama Lengkap"
                android:padding="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/blue_3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-340dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/inputemail"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/inputemail"
                android:layout_marginBottom="248dp"
                android:background="@drawable/cornerstyle"
                android:hint="    Input email"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/nomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor ponsel"
                android:textColor="@color/blue_3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-240dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/inputnomor"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/inputemail"
                android:layout_marginBottom="248dp"
                android:background="@drawable/cornerstyle"
                android:hint="    Input nomor ponsel"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/peranposisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peran/Posisi"
                android:textColor="@color/blue_3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-240dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/peran"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/inputemail"
                android:layout_marginBottom="248dp"
                android:background="@drawable/cornerstyle"
                android:hint="    Input posisi/peran"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/CHSE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sertifikasi CHSE"
                android:textColor="@color/blue_3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-240dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />


            <ImageView
                android:id="@+id/img_thumb"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_below="@+id/btn_choose"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="466dp"
                android:background="@drawable/cornerstyle"
                android:scaleType="centerCrop"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_choose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-520dp"
                android:background="@drawable/upload" />

            <TextView
                android:id="@+id/profilper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil perusahaan"
                android:textColor="@color/blue_3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />


            <ImageView
                android:id="@+id/img"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_below="@+id/btn_choose"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="466dp"
                android:background="@drawable/cornerstyle"
                android:scaleType="centerCrop"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_chooseprofilper"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-520dp"
                android:background="@drawable/upload" />

            <TextView
                android:id="@+id/pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/blue_3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/pw"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/inputemail"
                android:layout_marginBottom="248dp"
                android:background="@drawable/cornerstyle"
                android:hint="    Input password"
                android:padding="10dp"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_daftar"
                android:layout_width="220dp"
                android:layout_height="42dp"
                android:layout_marginTop="-200dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/btn_masuk"
                android:padding="0dp"
                android:text="Masuk"
                android:textColor="@color/blue_4"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lupapwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa password?"
                android:textColor="@color/blue_3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/punyaakun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun?"
                android:textColor="@color/blue_3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:textColor="@color/blue_3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="-20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.553"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>